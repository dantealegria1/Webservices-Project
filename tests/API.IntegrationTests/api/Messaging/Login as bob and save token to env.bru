meta {
  name: Login as bob and save token to env
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/api/account/login
  body: json
  auth: inherit
}

body:json {
  {
  	"email": "bob@test.com",
  	"password": "Pa$$w0rd"
  }
}

script:post-response {
  const user = res.getBody();
  
  test("Has properties", function () {
      expect(user).to.have.property('username');
      expect(user).to.have.property('bob_token');
  });
  
  if (test("Has properties")) {
      bru.setGlobalEnvVar('bob_token', user.token);
  }
}

settings {
  encodeUrl: true
}
